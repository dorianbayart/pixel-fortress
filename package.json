{
  "name": "pixel-fortress",
  "version": "0.0.1-dev",
  "description": "A 2D pixel-based strategy game that uniquely merges the depth of Tower Defense with the addictive simplicity of Clicker styles.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "update-manifest-version": "node scripts/update-manifest-version.js",
    "test": "node tests/*.test.mjs && node tests/testRunner.mjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dorianbayart/pixel-fortress.git"
  },
  "bugs": {
    "url": "https://github.com/dorianbayart/pixel-fortress/blob/main/KNOWN_BUGS.md"
  },
  "homepage": "https://dorianbayart.github.io/pixel-fortress/",
  "keywords": [
    "pixel",
    "fortress",
    "game",
    "strategy",
    "tower defense",
    "TD",
    "clicker",
    "pixel art",
    "2D",
    "HTML5",
    "JavaScript",
    "canvas",
    "web",
    "browser",
    "pixijs",
    "open source",
    "dungeon",
    "monsters",
    "waves",
    "upgrades",
    "skills",
    "achievements",
    "resource management",
    "base building",
    "survival"
  ],
  "author": "Dorian Bayart (https://github.com/dorianbayart)",
  "license": "ISC",
  "build": {
    "appId": "com.dorianbayart.pixelfortress",
    "productName": "Pixel Fortress",
    "icon": "assets/base_512_pixelated.png",
    "files": [
      "**/*",
      "!node_modules",
      "!package-lock.json",
      "!npm-debug.log",
      "!dist"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "identity": "Apple Distribution: Your Company Name (XXXXXXXXXX)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.0",
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12"
  }
}
